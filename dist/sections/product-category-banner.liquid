<section class="product-category">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="title text-center">
          <h2>Product Category</h2>
        </div>
      </div>

      <div class="col-md-6">
        <div class="category-box">
          <a href="">
            <img src="{{section.settings.category_top_left_image | img_url : '1920x'}}" alt="">
            <div class="content">
              <h3>{{section.settings.category_top_left_header}}</h3>
              <p>{{section.settings.category_top_left_description}}</p>
            </div>
          </a>  
        </div>
      </div>

      <div class="col-md-6">
        <div class="category-box">
          <a href="">
            <img src="{{section.settings.category_right_image | img_url : '1920x'}}" alt="">
            <div class="content">
              <h3>{{section.settings.category_right_header}}</h3>
              <p>{{section.settings.category_right_description}}</p>
            </div>
          </a>  
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Product Category Banners",
    "settings": [
      {
        "type": "text",
        "id": "category_top_left_header",
        "default": "Dresses",
        "label": "Category Top Left Header"
      },
      {
        "type": "text",
        "id": "category_top_left_description",
        "default": "This is Default Dresses",
        "label": "Category Top Left Description"
      },
      {
        "type": "image_picker",
        "id": "category_top_left_image",
        "label": "Category Top Left Image"
      },
      {
        "type": "url",
        "id": "category_top_left_url",
        "label": "Category Top Left url"
      },

      {
        "type": "text",
        "id": "category_right_header",
        "default": "Dresses",
        "label": "Category Right Header"
      },
      {
        "type": "text",
        "id": "category_right_description",
        "default": "This is Default Dresses",
        "label": "Category Right Description"
      },
      {
        "type": "image_picker",
        "id": "category_right_image",
        "label": "Category Right Image"
      },{
        "type": "url",
        "id": "category_right_url",
        "label": "Category Right url"
      }
    ]
  }
{% endschema %}